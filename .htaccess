<IfModule mod_rewrite.c>
	<IfModule mod_negotiation.c>
        Options -MultiViews
    </IfModule>
	<IfModule mod_headers.c>    
      Header add Access-Control-Allow-Origin "*" 
    </IfModule>

    RewriteEngine on
    RewriteCond %{REQUEST_URI} !^public/
    RewriteRule ^(.*)$ public/$1 [L] #relative substitution
</IfModule>